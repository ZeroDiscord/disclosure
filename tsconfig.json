{
    "compilerOptions": {
        "moduleResolution": "Node",
        "module": "commonjs",
        "target": "esnext",
        "noImplicitAny": true,
        "sourceMap": false,
        "pretty": false,
        "outDir": "./dist",
        "declaration": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
    },
    "include": [
        "src"
    ],
    "typedoc": {
        "out": "./docs/",
        "readme": "./README.md",
        "name": "disclosure-discord",
        "entryPoints": [
            "src/index.ts"
        ],
        "excludeExternals": true,
        "tsconfig": "./tsconfig.json"
    }
}